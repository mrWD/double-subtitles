{
  "manifest_version": 3,
  "name": "Double Subtitles",
  "version": "1.0",
  "description": "Display double subtitles.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webRequest"
  ],
  "default_locale": "en",
  "host_permissions": [
    "*://*.primevideo.com/*",
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*",
    "*://*.amazon.co.jp/*",
    "*://*.disneyplus.com/*",
    "*://*.netflix.com/*",
    "https://translate.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "css": [ "injectedCss.css" ],
      "js": [
        "src/settings.js",
        "src/utils.js",
        "src/ankiIntegration.js",
        "src/translationModal.js",
        "src/subtitlesManager.js",
        "src/sidebar.js",
        "content.js"
      ],
      "matches": [
        "*://*.primevideo.com/*",
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.de/*",
        "*://*.amazon.co.jp/*",
        "*://*.disneyplus.com/*",
        "*://*.netflix.com/*"
      ]
    }
  ]
}
