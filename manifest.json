{
  "manifest_version": 3,
  "name": "Double Subtitles",
  "version": "1.0.1",
  "description": "Display double subtitles.",
  "author": "Viktor Lavrov",
  "homepage_url": "https://github.com/mrwd/double-subtitles",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "default_locale": "en",
  "host_permissions": [
    "*://*.primevideo.com/*",
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*",
    "*://*.amazon.co.jp/*",
    "*://*.disneyplus.com/*",
    "*://*.netflix.com/*",
    "*://ankiuser.net/*",
    "*://quizlet.com/*",
    "https://translate.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "css": [ "assets/injectedCss.css" ],
      "js": [
        "src/settings.js",
        "src/utils.js",
        "src/autofill.js",
        "src/savedCards.js",
        "src/serviceIntegrations.js",
        "src/cardMenu.js",
        "src/translationModal.js",
        "src/subtitlesManager.js",
        "src/sidebar.js",
        "src/subtitles.js",
        "content.js"
      ],
      "matches": [
        "*://*.primevideo.com/*",
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.de/*",
        "*://*.amazon.co.jp/*",
        "*://*.disneyplus.com/*",
        "*://*.netflix.com/*",
        "*://ankiuser.net/*",
        "*://quizlet.com/*"
      ]
    }
  ]
}
